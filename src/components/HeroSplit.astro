<section
  class="content-shell hero-section pt-2 pb-10 lg:pt-4 lg:pb-12"
  aria-label="Pet platform main actions"
>
  <div class="hero-grid gap-4 lg:gap-5">
    <article class="hero-card hero-card-adoption" aria-labelledby="adoption-title">
      <p class="hero-kicker">
        <span class="hero-kicker-badge hero-kicker-badge-green">Adoption</span>
      </p>
      <h1 id="adoption-title" class="hero-title">
        Find your new<br /><span class="text-green-main">best friend</span>
      </h1>
      <p class="hero-description">
        Discover thousands of adoptable pets in your local area waiting for a
        forever home.
      </p>
      <a class="hero-cta hero-cta-green" href="#">Browse Pets â™¥</a>
    </article>

    <article class="hero-card hero-card-lost-found" aria-labelledby="lost-title">
      <p class="hero-kicker">
        <span class="hero-kicker-badge hero-kicker-badge-coral">Lost &amp; Found</span>
      </p>
      <h2 id="lost-title" class="hero-title">
        Help them find<br /><span class="text-coral-main">their way home</span>
      </h2>
      <p class="hero-description">
        Lost a pet or found one? Our community is here to help bring them home
        safely.
      </p>
      <a class="hero-cta hero-cta-coral" href="#">Report a Pet &#x1F4CD;</a>
    </article>
  </div>

  <!-- Search bar -->
  <div class="hero-search surface-panel" role="search" aria-label="Pet search">
    <div class="hero-search-toggle" role="tablist" aria-label="Search type">
      <button
        class="hero-search-tab hero-search-tab-active"
        role="tab"
        aria-selected="true"
        aria-label="Search adoptable pets"
      >Adopt</button>
      <button
        class="hero-search-tab"
        role="tab"
        aria-selected="false"
        aria-label="Search lost and found pets"
      >Lost/Found</button>
    </div>

    <div class="hero-search-input-wrap">
      <svg
        class="hero-search-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <circle cx="11" cy="11" r="8" />
        <line x1="21" y1="21" x2="16.65" y2="16.65" />
      </svg>
      <input
        class="hero-search-input"
        type="search"
        placeholder="Search breeds or locations..."
        aria-label="Search breeds or locations"
      />
    </div>

    <button
      class="hero-search-filter"
      aria-label="Filter search results"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <line x1="4" y1="6" x2="20" y2="6" />
        <line x1="8" y1="12" x2="16" y2="12" />
        <line x1="11" y1="18" x2="13" y2="18" />
      </svg>
    </button>
  </div>
</section>
